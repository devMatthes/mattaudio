@page "{id:int}"
@model mattaudio.Pages.Tracks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Track</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Track.TrackID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
@section Scripts {
    <script type="text/javascript">
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/player_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        var player;
        function onYouTubeIframeAPIReady()
        {
            player = new YT.Player('player', {
                height: '360',
                width: '640',
                videoId: 'OpHCfoNmL5o'
            });
        }
    </script>
}